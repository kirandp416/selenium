<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="AllTests" verbose="1" >

    <test name="NegativeTest">
        <groups>
            <run>
                <include name="smokeTests"/>
            </run>
        </groups>

        <classes>
            <class name="com.herokuapp.theinternet.Test2">
                <methods>
                    <include name="invalidPassword"></include>
                    <exclude name="invalidUsername"></exclude>
                </methods>
            </class>
        </classes>
    </test>
</suite>
